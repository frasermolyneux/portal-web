@model XtremeIdiots.Portal.Web.ViewModels.ProtectedNamesViewModel
@using XtremeIdiots.Portal.Repository.Abstractions.Models.V1.Players

@{
    ViewData["Title"] = "Protected Names";
}

<div class="page-header">
    <h2>Protected Names</h2>
    <p class="text-muted">Usernames exclusively owned by specific players. Unauthorized use triggers automatic bans.</p>
    <hr />
    <div class="mb-3">
        <i class="fa-solid fa-shield"></i>
        <span class="ms-1">Total Protected Names: @(Model?.ProtectedNames?.Count ?? 0)</span>
    </div>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">All Protected Names</h3>
        </div>
        <div class="card-body">
            <partial name="_ProtectedNamesTable" model="@(Model?.ProtectedNames ?? new List<ProtectedNameDto>())" />
        </div>
    </div>

@section Scripts {
    <script src="~/js/protected-names-table.js" asp-append-version="true"></script>
}