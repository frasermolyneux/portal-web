@model XtremeIdiots.Portal.Web.ViewModels.ProtectedNameReportViewModel

@{
    ViewData["Title"] = "Protected Name Usage Report";
}

<div class="page-header">
    <h2>Protected Name Usage Report</h2>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Protected Name Information</h3>
            </div>
            <div class="card-body">
                @if (Model.Report != null)
                {
                    <dl class="dl-horizontal">
                        <dt>Name:</dt>
                        <dd>@Model.Report.ProtectedName.Name</dd>
                        <dt>Created:</dt>
                        <dd><time time-ago utc="@Model.Report.ProtectedName.CreatedOn" show-absolute="false"></time></dd>
                        <dt>Created By:</dt>
                        <dd>@Model.Report.ProtectedName.CreatedByUserProfile?.DisplayName</dd>
                        <dt>Owner:</dt>
                        <dd>
                            <a asp-controller="Players" asp-action="Details"
                                asp-route-id="@Model.Report.OwningPlayer.PlayerId">
                                @Model.Report.OwningPlayer.Username
                            </a>
                        </dd>
                    </dl>
                }
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Usage Instances</h3>
    </div>
    <div class="card-body">
        @if (Model.Report != null && Model.Report.UsageInstances.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Player</th>
                            <th class="d-none d-md-table-cell">Last Used</th>
                            <th>Times Used</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usage in Model.Report.UsageInstances)
                        {
                            <tr class="@(usage.IsOwner ? "success" : "danger")">
                                <td>
                                    <a asp-controller="Players" asp-action="Details" asp-route-id="@usage.PlayerId">
                                        @usage.Username
                                    </a>
                                </td>
                                <td class="d-none d-md-table-cell"><time time-ago utc="@usage.LastUsed" show-absolute="false"></time></td>
                                <td>@usage.UsageCount</td>
                                <td>
                                    @if (usage.IsOwner)
                                    {
                                        <span class="badge bg-success">Legitimate Owner</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Unauthorized Usage</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                No usage instances found for this protected name.
            </div>
        }
    </div>
</div>

<div>
    <a asp-controller="ProtectedNames" asp-action="Index" class="btn btn-default">Back to Protected Names</a>
</div>
