@using XtremeIdiots.Portal.Web.Extensions
@using XtremeIdiots.Portal.Web.ViewModels
@model List<ServersGameServerViewModel>

@{
    ViewData["Title"] = "Game Servers";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-12">
            <div class="admin-actions-filters mb-2" id="serversFilters">
                <div class="filter-group full-width-search">
                    <label for="serversSearchInput" class="form-label">Search Servers</label>
                    <input type="text" id="serversSearchInput" class="form-control" placeholder="Search by title, hostname, map, or mod..." autocomplete="off" />
                </div>
            </div>

            <div class="container-fluid">
                <div class="ibox">
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table id="serversTable" class="table table-striped table-hover w-100">
                                <thead>
                                    <tr>
                                        <th scope="col">Game Type</th>
                                        <th scope="col">Title</th>
                                        <th scope="col">Hostname</th>
                                        <th scope="col">Links</th>
                                        <th scope="col">Players</th>
                                        <th scope="col">Map</th>
                                        <th scope="col">Mod</th>
                                        <th scope="col">Info</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <game-type-icon game="@item.GameServer.GameType"></game-type-icon>
                                        </td>
                                        <td>
                                            <server-name title="@item.GameServer.Title"
                                                live-title="@item.GameServer.LiveTitle"></server-name>
                                        </td>
                                        <td>
                                            <server-host host="@item.GameServer.Hostname"
                                                port="@item.GameServer.QueryPort"></server-host>

                                        </td>
                                        <td>
                                            <server-link type="gametracker" host="@item.GameServer.Hostname"
                                                port="@item.GameServer.QueryPort"></server-link>
                                            <server-link type="steam" game="@item.GameServer.GameType"
                                                host="@item.GameServer.Hostname"
                                                port="@item.GameServer.QueryPort"></server-link>
                                            <server-link type="hlsw" game="@item.GameServer.GameType"
                                                host="@item.GameServer.Hostname"
                                                port="@item.GameServer.QueryPort"></server-link>
                                        </td>
                                        <td>
                                            @{
                                                double percentage = 0;
                                                if (item.GameServer.LiveCurrentPlayers != null &&
                                                item.GameServer.LiveCurrentPlayers != 0 && item.GameServer.LiveMaxPlayers !=
                                                null && item.GameServer.LiveMaxPlayers != 0)
                                                {
                                                    percentage = (double)item.GameServer.LiveCurrentPlayers.Value /
                                                    item.GameServer.LiveMaxPlayers.Value * 100;
                                                }
                                            }

                                            <div class="progress" style="margin-right: 20px">
                                                <div style="width: @percentage%" aria-valuemax="100" aria-valuemin="0"
                                                    aria-valuenow="@percentage" role="progressbar" class="progress-bar">
                                                    <span class="visually-hidden">@percentage% Slots Filled</span>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @item.GameServer.LiveMap
                                        </td>
                                        <td>
                                            @item.GameServer.LiveMod
                                        </td>
                                        <td>
                                            <a class="btn btn-sm btn-primary" asp-controller="Servers"
                                                asp-action="ServerInfo" asp-route-id="@item.GameServer.GameServerId" 
                                                title="Server Info" aria-label="Server Info">
                                                <i class="fa-solid fa-circle-info"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/servers-index.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-actions.css" asp-append-version="true" />
}
