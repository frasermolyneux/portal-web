@model XtremeIdiots.Portal.Web.ViewModels.CreateProtectedNameViewModel

@{
    ViewData["Title"] = "Add Protected Name";
}

<div class="page-header">
    <h2>Add Protected Name</h2>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Player Information</h3>
            </div>
            <div class="card-body">
                <dl class="dl-horizontal">
                    <dt>Username:</dt>
                    <dd>@Model.Player?.Username</dd>
                    <dt>Game:</dt>
                    <dd>@Model.Player?.GameType</dd>
                    <dt>GUID:</dt>
                    <dd>@Model.Player?.Guid</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Add Protected Name</h3>
            </div>
            <div class="card-body">
                <form asp-controller="ProtectedNames" asp-action="Add" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="PlayerId" />

                    <div class="mb-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <small class="text-muted">Enter the name you want to protect. This must be unique.</small>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa-solid fa-plus" aria-hidden="true"></i> Add Protected Name
                        </button>
                        <a asp-controller="Players" asp-action="Details" asp-route-id="@Model.PlayerId"
                            class="btn btn-secondary">
                            <i class="fa-solid fa-xmark" aria-hidden="true"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}