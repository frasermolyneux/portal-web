@model XtremeIdiots.Portal.Web.ViewModels.ProtectedNameReportViewModel

@{
    ViewData["Title"] = "Protected Name Usage Report";
}

<div class="page-header">
    <h2>Protected Name Usage Report</h2>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Protected Name Information</h3>
            </div>
            <div class="card-body">
                @if (Model.Report != null)
                {
                    <dl class="dl-horizontal">
                        <dt>Name:</dt>
                        <dd>@Model.Report.ProtectedName.Name</dd>
                        <dt>Created:</dt>
                        <dd><time time-ago utc="@Model.Report.ProtectedName.CreatedOn" show-absolute="false"></time></dd>
                        <dt>Created By:</dt>
                        <dd>@Model.Report.ProtectedName.CreatedByUserProfile?.DisplayName</dd>
                        <dt>Owner:</dt>
                        <dd>
                            <a asp-controller="Players" asp-action="Details"
                                asp-route-id="@Model.Report.OwningPlayer.PlayerId">
                                @Model.Report.OwningPlayer.Username
                            </a>
                        </dd>
                    </dl>
                }
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Usage Instances</h3>
    </div>
    <div class="card-body">
        @if (Model.Report != null && Model.Report.UsageInstances.Any())
        {
            <partial name="_ProtectedNameUsageTable" model="Model.Report.UsageInstances" />
        }
        else
        {
            <div class="alert alert-info">
                No usage instances found for this protected name.
            </div>
        }
    </div>
</div>

<div>
    <a asp-controller="ProtectedNames" asp-action="Index" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left" aria-hidden="true"></i> Back to Protected Names
    </a>
</div>

@section Scripts {
    <script src="~/js/protected-name-usage-report.js" asp-append-version="true"></script>
}