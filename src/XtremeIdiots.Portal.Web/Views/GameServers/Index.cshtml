@inject IAuthorizationService AuthorizationService
@using Microsoft.AspNetCore.Authorization
@using XtremeIdiots.Portal.Web.Auth.Constants
@using XtremeIdiots.Portal.Web.Extensions
@using XtremeIdiots.Portal.Repository.Abstractions.Constants.V1
@using XtremeIdiots.Portal.Repository.Abstractions.Models.V1.GameServers
@model IEnumerable<GameServerDto>

@{
    ViewData["Title"] = "Game Servers";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-12">

            <div class="container-fluid">
                <div class="admin-actions-filters mb-2" id="gameServersFilters">
                    <div class="filter-group">
                        <label class="form-label" for="resetFilters">Reset</label>
                        <button type="button" id="resetFilters" class="btn btn-outline-secondary btn-sm">Clear Filters</button>
                    </div>
                </div>
                <div class="ibox">
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table id="gameServersTable" class="table table-striped table-hover w-100">
                                <thead>
                                    <tr>
                                        <th scope="col">
                                            @Html.DisplayNameFor(model => model.ServerListPosition)
                                        </th>
                                        <th scope="col">
                                            @Html.DisplayNameFor(model => model.GameType)
                                        </th>
                                        <th scope="col">
                                            @Html.DisplayNameFor(model => model.Title)
                                        </th>
                                        <th scope="col">
                                            @Html.DisplayNameFor(model => model.Hostname)
                                        </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.LiveTrackingEnabled)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PortalServerListEnabled)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.BannerServerListEnabled)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ChatLogEnabled)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.BotEnabled)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ServerListPosition)
                                        </td>
                                        <td>
                                            <game-type-icon game="@item.GameType"></game-type-icon>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>
                                        <td>
                                            <server-host host="@item.Hostname" port="@item.QueryPort"></server-host>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LiveTrackingEnabled)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PortalServerListEnabled)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BannerServerListEnabled)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ChatLogEnabled)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BotEnabled)
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                @if ((await AuthorizationService.AuthorizeAsync(User, item.GameType,
                                                                                            AuthPolicies.ManageMaps)).Succeeded && item.GameType ==
                                                                                            GameType.CallOfDuty4)
                                                {
                                                    <a type="button" class="btn btn-secondary" asp-controller="MapManager"
                                                        asp-action="Manage" asp-route-id="@item.GameServerId"><i
                                                            class="fa-solid fa-pen-to-square"></i> <span class="d-none d-sm-inline">Map Manager</span></a>
                                                }

                                                @if ((await AuthorizationService.AuthorizeAsync(User, item.GameType,
                                                                                            AuthPolicies.EditGameServer)).Succeeded)
                                                {
                                                    <a type="button" class="btn btn-primary" asp-action="Edit"
                                                        asp-route-id="@item.GameServerId"><i class="fa-solid fa-pen-to-square"></i> <span class="d-none d-sm-inline">Edit</span></a>
                                                }

                                                @if ((await AuthorizationService.AuthorizeAsync(User, item.GameType,
                                                                                            AuthPolicies.ViewGameServer)).Succeeded)
                                                {
                                                    <a type="button" class="btn btn-primary" asp-action="Details"
                                                        asp-route-id="@item.GameServerId"><i class="fa-solid fa-circle-info"></i> <span class="d-none d-sm-inline">Details</span></a>
                                                }

                                                @if ((await AuthorizationService.AuthorizeAsync(User,
                                                                                            AuthPolicies.DeleteGameServer)).Succeeded)
                                                {
                                                    <a type="button" class="btn btn-danger" asp-action="Delete"
                                                        asp-route-id="@item.GameServerId"><i class="fa-solid fa-trash"></i> <span class="d-none d-sm-inline">Delete</span></a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        </div>
                    </div>
                    <div class="ibox-footer">
                        <div class="btn-group btn-group-sm" role="group">
                            <a type="button" class="btn btn-primary" asp-action="Create"><i class="fa-solid fa-plus"></i>
                                Create New</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/game-servers-index.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-actions.css" />
}