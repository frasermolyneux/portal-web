@model XtremeIdiots.Portal.Web.ViewModels.TagsViewModel

@{
    ViewData["Title"] = "Manage Player Tags";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Player Tags</h5>
                    <div class="ibox-tools">
                        <a asp-action="Create" class="btn btn-primary btn-sm">
                            <i class="fa-solid fa-plus" aria-hidden="true"></i> Create New Tag
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table id="tagsTable" class="table table-striped table-hover w-100">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Tag Preview</th>
                                    <th class="text-center">Players</th>
                                    <th>User Defined</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var tag in Model.Tags)
                                {
                                    <tr>
                                        <td>@tag.Name</td>
                                        <td>@tag.Description</td>
                                        <td>@Html.Raw(tag.TagHtml)</td>
                                        <td class="text-center">
                                            <span class="badge bg-info">@tag.PlayerCount</span>
                                        </td>
                                        <td>
                                            @if (tag.UserDefined)
                                            {
                                                <span class="badge bg-success">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">No</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="Edit" asp-route-id="@tag.TagId"
                                                    class="btn btn-primary btn-sm">
                                                    <i class="fa-solid fa-pen-to-square" aria-hidden="true"></i> <span class="d-none d-sm-inline">Edit</span>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@tag.TagId"
                                                    class="btn btn-danger btn-sm">
                                                    <i class="fa-solid fa-trash" aria-hidden="true"></i> <span class="d-none d-sm-inline">Delete</span>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/tags-index.js" asp-append-version="true"></script>
}